<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.example.renjunzhou.smarthome.activity.MainActivity"
    android:textAlignment="center"
    android:id="@+id/view">

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/applianceActivityButton"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:id="@+id/restart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Appliance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/restart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="112dp"
        android:id="@+id/applianceActivityButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/easyGetUp"
        android:layout_below="@+id/messageActivityButton"
        android:layout_alignLeft="@+id/applianceActivityButton"
        android:layout_alignStart="@+id/applianceActivityButton"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/applianceActivityButton"
        android:layout_alignEnd="@+id/applianceActivityButton"
        android:text="ezGetUp" />

    <Button
        android:text="  Message  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/messageActivityButton"
        android:layout_below="@+id/mainStatus"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:text="developing"
        android:layout_alignBaseline="@+id/easyGetUp"
        android:layout_alignBottom="@+id/easyGetUp"
        android:layout_alignLeft="@+id/messageActivityButton"
        android:layout_alignStart="@+id/messageActivityButton" />


</RelativeLayout>
