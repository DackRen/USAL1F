<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.renjunzhou.smarthome.activity.ControlActivity">

    <fragment
        android:id="@+id/right_fragment"
        android:name="com.example.renjunzhou.smarthome.activity.LightFragment"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/left_fragment"
        android:layout_toEndOf="@+id/left_fragment"
        android:layout_alignParentTop="true" />

    <fragment
        android:id="@+id/left_fragment"
        android:name="com.example.renjunzhou.smarthome.activity.NavigateFragment"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_navigate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
